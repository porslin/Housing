<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        
        <NavLink class="navbar-brand justify-content-center" href="" Match="NavLinkMatch.All">
                <span class="align-content-center" aria-hidden="true"></span> Housing
        </NavLink>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/homes" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Bostäder
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/people" Match="NavLinkMatch.All">
                <span class="oi oi-person" aria-hidden="true"></span> Personer
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
